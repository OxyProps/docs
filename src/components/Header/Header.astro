---
import SkipToContent from './SkipToContent.astro';
import SidebarToggle from './SidebarToggle';
import LanguageSelect from './LanguageSelect';
import Search from './Search.astro';
import ThemeToggleButton from './ThemeToggleButton';
import OxyPropsLogo from './OxyPropsLogo.astro';

import { getLanguageFromURL } from '../../util';
import { getDocSearchStrings, useTranslations } from '../../i18n/util';

const { currentPage } = Astro.props;
const lang = currentPage && getLanguageFromURL(currentPage);
const docsearchStrings = getDocSearchStrings(Astro);
const t = useTranslations(Astro);
---

<header id="header">
	<SkipToContent />
	<nav class="nav-wrapper" aria-label={t('navbar.a11yTitle')}>
		<div dir="ltr" lang="en" class="logo flex">
			<ul>
				<li>
					<a class="oxyprops" href="https://oxyprops.com/">
						<OxyPropsLogo size="32" />
						<span>oxyprops</span>
					</a>
				</li>
				<li>
					<a class="docs" href={`/${lang || 'en'}/getting-started/`}> docs</a>
				</li>
			</ul>
		</div>
		<ThemeToggleButton client:visible labels={{ useLight: t('themeToggle.useLight'), useDark: t('themeToggle.useDark') }} isInsideHeader={true} />
		{lang && <LanguageSelect lang={lang} label={t('languageSelect.label')} client:idle />}
		<Search {lang} labels={docsearchStrings} />
		<SidebarToggle client:idle />
	</nav>
</header>

<style>
	header {
		position: fixed;
		left: 0;
		top: 0;
		right: 0;
		height: var(--theme-navbar-height);
		z-index: 11;
		padding: 2rem 0;
		display: flex;
        background-color: var(--theme-navbar-bg);
		align-items: center;
		justify-content: left;
		overflow: hidden;
	}



	ul,
	li {
		all: inherit;
		flex-grow: 0;
	}

	.nav-wrapper {
		display: flex;
		align-items: center;
		justify-content: center;
		gap: 0.75rem;
		width: 100%;
		padding-inline: var(--min-spacing-inline);
	}

	/* If the device is likely to show a scrollbar gutter, reserve space for it */
	@media (hover: hover) {
		.nav-wrapper {
			max-width: calc(100vw - 1.1rem);
		}
	}

	.logo {
		display: flex;
		justify-content: flex-start;
		font-size: 1.5rem;
		flex-grow: 1;
		flex-shrink: 0;
		font-weight: var(--o-font-weight-7);
		line-height: 1;
		color: var(--o-text-1);
		text-decoration: none;
		gap: 0.5em;
	}

	:global([dir='rtl']) .logo {
		justify-content: flex-end;
	}

	.logo a {
		display: flex;
		flex-direction: row;
		justify-content: flex-start;
		align-items: center;
		padding: 0.5em 0.25em;
		margin: -0.5em -0.25em;
		text-decoration: none;
	}

	.logo .hover {
		opacity: 0;
	}
	.logo a {
		transition: transform 180ms ease-out;
	}

	.logo a:hover,
	.logo a:focus {
		opacity: 1;
		transform: translateY(-2px);
	}

	.logo a:focus:not(:focus-visible) {
		outline: none;
	}

	.logo h1 {
		font: inherit;
		color: inherit;
		margin: 0;
	}

	.oxyprops {
		overflow: hidden;
		width: 41px;
		color: var(--theme-text);
		font-weight: var(--o-font-weight-7);
	}

    .oxyprops span {
        display: none;
    }

	.docs {
		display: none;
	}

	@media (min-width: 20em) {
		.docs {
			display: inherit;
			max-width: 80px;
			color: var(--theme-accent);
			font-weight: var(--o-font-weight-7);
		}
	}

	@media (min-width: 23.5em) {
		.docs {
			max-width: none;
		}
		.nav-wrapper {
			gap: 1rem;
		}
	}

	@media (min-width: 50em) {
		header {
			padding: 2.5rem 0 1.5rem 0;
		}
		.oxyprops {
			width: auto;
		}

        .oxyprops span {
            display: inline;
        }
        .docs {
			font-weight: var(--o-font-weight-4);
		}
	}

	@media (forced-colors: active) {
		.text {
			fill: LinkText;
		}
		.docs-path {
			fill: ActiveText;
		}
	}
</style>
