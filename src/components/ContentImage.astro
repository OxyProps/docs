---
import { Picture } from '@astrojs/image/components';
export interface Props {
	coverImage: string;
	alt?: string;
	caption?: string;
	aspectRatio?: `${number}:${number}`;
	[attr: string]: any;
}
const { category, postname, coverImage, alt = '', caption, aspectRatio, ...attrs }: Props = Astro.props;
---

<figure>
	<Picture src={coverImage} alt={alt} widths={[400, 800, 1500]} sizes="(max-width: 767px) 100vw, 800px" background={undefined} aspectRatio={aspectRatio} {...attrs} />
	{caption && <figcaption>{caption}</figcaption>}
</figure>

<style>
	img,
	picture :global(img),
	svg {
		border-radius: 5px;
		box-shadow: var(--o-shadow-3);
	}

	figure {
		margin-block: var(--o-size-fluid-4);
	}
	figcaption {
		margin-block-start: var(--o-size-fluid-1);
		text-align: center;
		font-size: var(--o-fluid-font-00);
		font-style: italic;
	}
</style>
