---
import { Picture } from "@astrojs/image/components";
export interface Props {
  coverImage: string;
  alt?: string;
  aspectRatio?: `${number}:${number}`;
  [attr: string]: any;
}
const {
  category,
  postname,
  coverImage,
  alt = "",
  aspectRatio,
  ...attrs
}: Props = Astro.props;
---

<Picture
  src={coverImage}
  alt={alt}
  widths={[400, 800, 1500]}
  sizes="(max-width: 767px) 100vw, 800px"
  background={undefined}
  aspectRatio={aspectRatio}
  {...attrs}
/>

<style>
  img,
  picture :global(img),
  svg {
    border-radius: 5px;
    margin-inline: auto;
    margin-block: var(--o-size-fluid-4);
    box-shadow: var(--o-shadow-6);
    width: 100%;
  }
</style>
